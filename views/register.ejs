    <h1>Registraion Form</h1>
    <form action="/register" method="post">
        <label for="username">UserName:</label><br />
        <input type="text" name="username" placeholder="Enter Username" id="username"><br /><br />

        <label for="email">Email:</label><br />
        <input type="email" name="email" placeholder="Enter Email" id="email"><br /><br />
        <label for="password">Password:</label><br />
        <input type="password" name="password" placeholder="Enter Password" id="password"><br /><br />
        <label for="age">Age:</label><br />
        <input type="number" name="age" placeholder="Enter Age" id="age"><br /><br />

        <button type="submit">Register User</button>
    </form>

